<div class="panel panel-default">
  <div class="panel-heading">
    <h3>
      <%= @user.name %>
      Edit
    </h3>
  </div>
  <div class="panel-body">
    <%= form_for @user do |f| %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control'  %>
      </div>

      <div class="form-group">
        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to 'Back', :back, class: 'btn btn-default'%>
      </div>

    <% end %>
  </div>
</div>
