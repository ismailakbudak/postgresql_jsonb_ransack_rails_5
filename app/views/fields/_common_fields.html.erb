<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :type %>
  <%= f.select :type, [['Number', 'number'], ['Text', 'text']],  {}, { class: 'form-control'} %>
</div>

<div class="checkbox">
  <label>
    <%= f.check_box :is_filter_exist %>
    Show filter?
  </label>
</div>

<div class="checkbox">
  <label>
    <%= f.check_box :is_sort_exist %>
    Show sort link?
  </label>
</div>